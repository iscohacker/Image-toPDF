<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sasa"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectImages1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#0AF707"
        android:text="Rasmlarni tanlash"
        android:textColor="#1F1F1F"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0AF707"
        android:text="Bekor qilish"
        android:textColor="#1F1F1F"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/tvImageCount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="sonlari"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etPdfFileName1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#A3A3A3"
        android:hint="PDF fayl nomi"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSavePdf1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0AF707"
        android:text="PDF saqlash"
        android:textColor="#1F1F1F"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="5dp" />

</LinearLayout>
